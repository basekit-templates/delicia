<head>
    <meta charset="utf-8" />
    <title>{{ page.title }}</title>
    <meta name="keywords" content="{{ page.keywords }}" />
    <meta name="description" content="{{ page.description }}" />

    {% if site.favicon %}
        <link rel="icon" href="{{ site.favicon['favicon'] }}" type="image/x-icon" />
        <link rel="SHORTCUT ICON" href="{{ site.favicon['thumbnail'] }}?v={{ "now"|date("U") }}" type="image/x-icon" />
    {% endif %}
    <meta name="viewport" content="width=device-width,initial-scale=1">

    {% include basekit.headScript %}
</head>

<body class="{{ page.backgroundClass }} {% block class %}{% endblock %}">

        <!-- Main Widget Zone -->
        {% block content %}
        {% endblock %}


    {% include basekit.bodyScript %}


     <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <!-- Clickable -->
    <script src="{{ asset('js/clickable.js')}}"></script>

    <!-- Custom JS -->
    <script src="{{asset('js/custom.js')}}"></script>


    {% block scripts %}
    {% endblock %}

    <!-- Nav Menu Script -->
    <script nonce="{{ numberUsedOnce }}">

        // Toggles class open to display/hide the whole navigation
        $(document).on("click", ".navigation-toggle", function() {
            $( ".bk-extendednavigation" ).toggleClass( "open" );
        });

        // Toggles class open to add noscroll to body
        $( ".navigation-toggle" ).click(function() {
            $( "body" ).toggleClass( "noscroll" );
        });

    </script>

    <!-- imagesLoaded -->
    <script src="{{asset('js/imagesloaded.min.js')}}"></script>

    <!-- Masonry -->
    <script src="{{asset('js/masonry.min.js')}}"></script>

    <!-- Run Masonry -->
    <script nonce="{{ numberUsedOnce }}">
        var container = document.querySelector('.product-list');

        if (container) {
            imagesLoaded( container, function() {
                var msnry = new Masonry( container, {
                    itemSelector: '.product-item'
                });
            });
        };
    </script>


</body>
</html>
