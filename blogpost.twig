{% extends "layout.twig" %}
{% block class %}bk-pt-blogpost{% endblock %}
{% block content %}

<div class="blog-post-wrapper">

    <!-- Header Include -->
    {% include "includes/header.twig" %}

        <!-- Container -->
        <div class="container">
            <!-- Main Widget Zone -->
            {{zone('main')|raw}}
        </div>
        <!-- End Container -->

    <!-- Footer Include -->
    {% include "includes/footer.twig" %}

</div>

{% endblock %}

{% block scripts %}
    <script nonce="{{ numberUsedOnce }}">
        if (document.querySelector(".post-article--has-image")) {
            document.body.classList.add("blog-post--has-image");
        }
    </script>
{% endblock %}
